@model EMarketingApp.Models.Analyst

@{
    ViewBag.Title = "Analyst Signup";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you're using a shared layout
}

<h2>Signup as an Analyst</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("Signup", "Analyst", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.Username, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Enter username" })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label" })
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Enter password" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Signup" class="btn btn-success" />
                <a href="@Url.Action("Login", "Analyst")" class="btn btn-default">Back to Login</a>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        }
    </div>
</div>