@model EMarketingApp.Models.Analyst

@{
    ViewBag.Title = "Analyst Signup";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign-Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
</head>
<body>
    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
        <div class="row align-items-center g-lg-5 py-5">
            <div class="col-lg-7 text-center text-lg-start">
                <h1 class="display-4 fw-bold lh-1 text-body-emphasis mb-3">
                    Analyst Sign-Up!!
                </h1>
                <p class="col-lg-10 fs-4">
                    Below is an example form built entirely with Bootstrap’s form
                    controls. Each required form group has a validation state that can
                    be triggered by attempting to submit the form without completing it.
                </p>
            </div>
            <div class="col-md-10 mx-auto col-lg-5">
                @using (Html.BeginForm("Signup", "Analyst", FormMethod.Post, new { @class = "p-4 p-md-5 border rounded-3 bg-body-tertiary", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = " " })
                        @Html.LabelFor(model => model.Username, "Username", new { @class = "control-label" })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-floating mb-3">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = " " })
                        @Html.LabelFor(model => model.Password, "Password", new { @class = "control-label" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>

                    <input type="submit" value="Signup" class="w-100 btn btn-lg btn-primary" />

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                }
                <hr class="my-4" />
                <small class="text-body-secondary">By clicking Sign up, you agree to the terms of use.</small>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>
