@model IEnumerable<EMarketingApp.Models.Product>

@foreach (var product in Model)
{
    <div class="col">
        <div class="card shadow-sm">
            <img src="@Url.Content("~/Content/ProductImages/" + product.ProductImage)"
                 class="card-img-top"
                 alt="Thumbnail"
                 style="width: 100%; height: 225px; object-fit: cover" />
            <div class="card-body">
                <h5 class="card-title">@product.ProductName</h5>
                <p class="card-text">@product.Description</p>
                <p class="card-text"><strong>Price:</strong> ₹@product.Price</p>
                <p class="card-text"><strong>Email:</strong> @product.EmailAddress</p>
                <p class="card-text"><strong>Visible Until:</strong> @product.DisplayUntil?.ToString("dd MMM yyyy")</p>

                <div class="d-flex justify-content-between align-items-center">
                    <button class="btn btn-success btn-sm" onclick="voteProduct('@product.ProductId', 'Like')">Like</button>
                    <button class="btn btn-danger btn-sm" onclick="voteProduct('@product.ProductId', 'Dislike')">Dislike</button>
                </div>
                <!-- Feedback Form -->
                <form action="@Url.Action("SubmitFeedback", "Marketer", new { productId = product.ProductId })" method="post">
                    <textarea name="feedback" class="form-control" placeholder="Write feedback"></textarea>
                    <button type="submit" class="btn btn-primary btn-sm">Submit Feedback</button>
                </form>


            </div>
        </div>
    </div>
}


