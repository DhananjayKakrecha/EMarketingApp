@model IEnumerable<EMarketingApp.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<div class="container">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <div class="col-md-3 mb-2 mb-md-0">
            <a href="#"
               class="d-inline-flex link-body-emphasis text-decoration-none">
                <svg xmlns="http://www.w3.org/2000/svg"
                     width="40"
                     height="32"
                     fill="none"
                     stroke="black"
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     stroke-width="2"
                     class="d-block mb-2"
                     role="img"
                     viewBox="0 0 24 24">
                    <title>Product</title>
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M14.31 8l5.74 9.94M9.69 8h11.48M7.38 12l5.74-9.94M9.69 16L3.95 6.06M14.31 16H2.83m13.79-4l-5.74 9.94"></path>
                </svg>
                <span class="fs-4 ms-2" style="color:black;">Markit-Up</span>
            </a>
        </div>

        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li><a href="#" class="nav-link px-2">Home</a></li>
            <li><a href="@Url.Action("Ranking", "Product")" class="nav-link px-2 link-secondary">Rankings</a></li>
            <li><a href="@Url.Action("MainSiteProducts", "Product")" class="nav-link px-2 link-secondary">Main Site Products</a></li>
        </ul>

        <div class="col-md-3 text-end">
            <a href="@Url.Action("Create", "Product")" class="btn btn-primary me-2">Add New Product</a>
            <a href="@Url.Action("Logout", "Home")" class="btn btn-outline-primary me-2">Logout</a>
        </div>
    </header>
</div>

<div class="container">
    <h2>Categories</h2>
    <p>
        <a class="btn btn-primary" href="@Url.Action("Create", "Category")">
            <span class="glyphicon glyphicon-plus"></span> Add New Category
        </a>
    </p>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Image</th>
                <th style="width:120px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in Model)
            {
                <tr>
                    <td>@cat.CategoryName</td>
                    <td>
                        @if (!string.IsNullOrEmpty(cat.Cat_Image))
                        {
                            <img src="@Url.Content("~/Content/CategoryImages/" + cat.Cat_Image)" alt="@cat.CategoryName" style="height:60px;" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>
                        @* Remove button: It may lead to a deletion confirmation page *@
                        @Html.ActionLink("Remove", "Delete", new { id = cat.CategoryId }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>